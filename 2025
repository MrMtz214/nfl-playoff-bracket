  <button onclick="submitBracket()">Submit Bracket</button>

  <script>
    function submitBracket() {
      const afc = [
        document.getElementById('afc1').value,
        document.getElementById('afc2').value,
        document.getElementById('afc3').value,
        document.getElementById('afc4').value
      ];

      const nfc = [
        document.getElementById('nfc1').value,
        document.getElementById('nfc2').value,
        document.getElementById('nfc3').value,
        document.getElementById('nfc4').value
      ];

      const superbowl = document.getElementById('superbowl').value;

      alert(`Your bracket:\nAFC: ${afc.join(', ')}\nNFC: ${nfc.join(', ')}\nSuper Bowl Winner: ${superbowl}`);
    }
  </script>
